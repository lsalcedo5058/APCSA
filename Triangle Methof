package MOD4;

/**
 *
 * @author lssal
 */
public class Triangle {
    static void myMethod(int slope, int size){
        for(int i = 0; i < size; i ++){
            for (int j = size; j >= i; j--) { 
                System.out.print(" "); 
            }
            for(int j = 0; j < i + slope; j ++){
                System.out.print("* ");
            }
            System.out.println();
        }
   }
    
  public static void main(String[] args){
      myMethod(0,10);
  }
}
 
